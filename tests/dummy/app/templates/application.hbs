<div class="container">
    <div class="row">
        <div class="col-sm-4 form-group">
            <h1>Users</h1>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                </tr>
                </thead>
                <tbody>
                {{#each user in model.users}}
                    <tr>
                        <td>
                            {{user.id}}
                        </td>
                        <td>
                            {{user.name}}
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-xs-12">
            <button class="btn btn-default" type="button" {{action 'next' 'user'}}>
                Load More
            </button>
        </div>
    </div>
</div>
